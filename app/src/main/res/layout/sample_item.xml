<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#DFD69B"
    android:elevation="10dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sample_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/name"
            android:textColor="#202020"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/sample_image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="@string/sample_location"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/sample_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="@string/acoustic_impedance"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/sample_acoustic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="@string/mineral_predicted"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/sample_mineral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>